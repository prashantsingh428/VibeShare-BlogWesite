<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <style>
            :root {
                --primary: #4a5d4a;
                --primary-light: #6b7f6b;
                --accent: #c9b99a;
                --accent-light: #e8dcc8;
                --dark: #1e1e1e;
                --light: #f5f3ef;
                --cream: #faf8f5;
            }

            body {
                background: linear-gradient(135deg, var(--accent-light) 0%, var(--cream) 50%, #e8e4dc 100%);
            }

            .auth-card {
                background: white;
                border-radius: 24px;
                box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
                overflow: hidden;
                position: relative;
            }

            .form-input {
                width: 100%;
                padding: 14px 16px 14px 48px;
                border-radius: 12px;
                background: #f8f7f4;
                border: 1px solid #e8e6e1;
                color: #333;
                font-size: 15px;
                transition: all 0.3s;
            }

            .form-input:focus {
                outline: none;
                border-color: var(--primary);
                background: white;
                box-shadow: 0 0 0 4px rgba(74, 93, 74, 0.1);
            }

            .form-input::placeholder {
                color: #999;
            }

            .btn-primary {
                background: var(--dark);
                color: white;
                padding: 14px 28px;
                border-radius: 30px;
                font-weight: 500;
                transition: all 0.3s;
                cursor: pointer;
                width: 100%;
                border: none;
            }

            .btn-primary:hover {
                background: #333;
                transform: translateY(-2px);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            }

            .blob-shape {
                position: absolute;
                border-radius: 50%;
                filter: blur(80px);
                opacity: 0.4;
                z-index: 0;
            }

            .input-icon {
                position: absolute;
                left: 16px;
                top: 50%;
                transform: translateY(-50%);
                color: #999;
            }

            /* Toggle Animation Styles */
            .form-container {
                transition: all 0.4s ease-in-out;
            }

            .hidden-form {
                display: none;
                opacity: 0;
                transform: translateX(20px);
            }

            .visible-form {
                display: block;
                opacity: 1;
                transform: translateX(0);
                animation: fadeIn 0.4s ease-out forwards;
            }

            @keyframes fadeIn {
                from {
                    opacity: 0;
                    transform: translateX(20px);
                }

                to {
                    opacity: 1;
                    transform: translateX(0);
                }
            }
        </style>
</head>

<body class="min-h-screen flex flex-col text-slate-800 relative overflow-hidden">

    <%- include('./partials/navbar') %>

        <!-- Decorative Blobs -->
        <div class="blob-shape w-96 h-96 bg-[#c9b99a]/50 -top-48 -left-48"></div>
        <div class="blob-shape w-80 h-80 bg-[#4a5d4a]/30 -bottom-40 -right-40"></div>
        <div class="blob-shape w-64 h-64 bg-[#e8dcc8]/60 top-1/2 right-1/4"></div>

        <div class="flex-grow flex items-center justify-center w-full px-4 py-16 relative z-10">

            <div class="w-full max-w-md">

                <div class="auth-card p-8 md:p-10">

                    <!-- Header -->
                    <div class="text-center mb-8">
                        <div
                            class="w-14 h-14 rounded-2xl bg-[#4a5d4a] flex items-center justify-center text-white mx-auto mb-4">
                            <i class="ri-leaf-line text-2xl"></i>
                        </div>
                        <h2 class="text-2xl font-bold text-slate-800" id="form-title">Welcome back</h2>
                        <p class="text-slate-500 mt-2 text-sm" id="form-subtitle">Enter your credentials to access your
                            account</p>
                    </div>

                    <!-- Error Alert -->
                    <% if (typeof error !=='undefined' && error) { %>
                        <div
                            class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-xl mb-6 flex items-center gap-3 text-sm">
                            <i class="ri-error-warning-line text-lg"></i>
                            <span>
                                <%= error %>
                            </span>
                        </div>
                        <% } %>

                            <!-- LOGIN FORM -->
                            <div id="login-form" class="form-container visible-form">
                                <form action="/login" method="post" class="space-y-5">

                                    <!-- Email -->
                                    <div>
                                        <label class="block text-sm font-medium text-slate-700 mb-2">Email</label>
                                        <div class="relative">
                                            <i class="ri-mail-line input-icon"></i>
                                            <input type="email" name="email" placeholder="you@example.com" required
                                                class="form-input">
                                        </div>
                                    </div>

                                    <!-- Password -->
                                    <div>
                                        <div class="flex items-center justify-between mb-2">
                                            <label class="block text-sm font-medium text-slate-700">Password</label>
                                            <a href="#"
                                                class="text-sm text-[#4a5d4a] hover:underline font-medium">Forgot
                                                password?</a>
                                        </div>
                                        <div class="relative">
                                            <i class="ri-lock-line input-icon"></i>
                                            <input type="password" name="password" placeholder="••••••••" required
                                                class="form-input">
                                        </div>
                                    </div>

                                    <!-- Remember Me -->
                                    <div class="flex items-center gap-2">
                                        <input type="checkbox" id="remember"
                                            class="w-4 h-4 rounded border-slate-300 text-[#4a5d4a] focus:ring-[#4a5d4a]">
                                        <label for="remember" class="text-sm text-slate-600">Remember me for 30
                                            days</label>
                                    </div>

                                    <!-- Submit Button -->
                                    <button type="submit" class="btn-primary flex items-center justify-center gap-2">
                                        <span>Sign In</span>
                                        <i class="ri-arrow-right-line"></i>
                                    </button>
                                </form>

                                <div class="mt-8 text-center text-sm text-slate-500">
                                    Don't have an account?
                                    <button onclick="toggleForm('register')"
                                        class="text-[#4a5d4a] font-semibold hover:underline ml-1 focus:outline-none">Create
                                        account</button>
                                </div>
                            </div>

                            <!-- REGISTER FORM -->
                            <div id="register-form" class="form-container hidden-form">
                                <form action="/register" method="post" class="space-y-4">

                                    <!-- Name -->
                                    <div>
                                        <div class="relative">
                                            <i class="ri-user-line input-icon"></i>
                                            <input type="text" name="name" placeholder="Full Name" required
                                                class="form-input">
                                        </div>
                                    </div>

                                    <!-- Username & Age -->
                                    <div class="grid grid-cols-2 gap-4">
                                        <div class="relative">
                                            <i class="ri-at-line input-icon"></i>
                                            <input type="text" name="username" placeholder="Username" required
                                                class="form-input">
                                        </div>
                                        <div class="relative">
                                            <i class="ri-calendar-line input-icon"></i>
                                            <input type="number" name="age" placeholder="Age" required
                                                class="form-input" min="13">
                                        </div>
                                    </div>

                                    <!-- Email -->
                                    <div>
                                        <div class="relative">
                                            <i class="ri-mail-line input-icon"></i>
                                            <input type="email" name="email" placeholder="Email Address" required
                                                class="form-input">
                                        </div>
                                    </div>

                                    <!-- Password -->
                                    <div>
                                        <div class="relative">
                                            <i class="ri-lock-line input-icon"></i>
                                            <input type="password" name="password" placeholder="Create Password"
                                                required class="form-input">
                                        </div>
                                    </div>

                                    <!-- Submit Button -->
                                    <button type="submit"
                                        class="btn-primary flex items-center justify-center gap-2 mt-6">
                                        <span>Create Account</span>
                                        <i class="ri-user-add-line"></i>
                                    </button>
                                </form>

                                <div class="mt-8 text-center text-sm text-slate-500">
                                    Already have an account?
                                    <button onclick="toggleForm('login')"
                                        class="text-[#4a5d4a] font-semibold hover:underline ml-1 focus:outline-none">Sign
                                        In</button>
                                </div>
                            </div>

                            <!-- Trust Badges -->
                            <div class="flex items-center justify-center gap-6 mt-8 text-slate-400 text-sm">
                                <div class="flex items-center gap-2">
                                    <i class="ri-shield-check-line"></i>
                                    <span>Secure</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <i class="ri-lock-line"></i>
                                    <span>Encrypted</span>
                                </div>
                            </div>

                </div>

            </div>

        </div>

        <script>
            function toggleForm(show) {
                const loginForm = document.getElementById('login-form');
                const registerForm = document.getElementById('register-form');
                const title = document.getElementById('form-title');
                const subtitle = document.getElementById('form-subtitle');

                if (show === 'register') {
                    loginForm.classList.remove('visible-form');
                    loginForm.classList.add('hidden-form');

                    registerForm.classList.remove('hidden-form');
                    registerForm.classList.add('visible-form');

                    title.textContent = "Create Account";
                    subtitle.textContent = "Join our community of storytellers";
                } else {
                    registerForm.classList.remove('visible-form');
                    registerForm.classList.add('hidden-form');

                    loginForm.classList.remove('hidden-form');
                    loginForm.classList.add('visible-form');

                    title.textContent = "Welcome back";
                    subtitle.textContent = "Enter your credentials to access your account";
                }
            }

            // Check URL hash to open register form by default if needed
            if (window.location.hash === '#register') {
                toggleForm('register');
            }
        </script>
        <%- include('./partials/footer') %>
</body>

</html>