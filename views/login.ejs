<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <style>
            :root {
                --primary: #4a5d4a;
                --primary-light: #6b7f6b;
                --accent: #c9b99a;
                --accent-light: #e8dcc8;
                --dark: #1e1e1e;
                --light: #f5f3ef;
                --cream: #faf8f5;
            }

            body {
                background: linear-gradient(135deg, var(--accent-light) 0%, var(--cream) 50%, #e8e4dc 100%);
            }

            .login-card {
                background: white;
                border-radius: 24px;
                box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
            }

            .form-input {
                width: 100%;
                padding: 14px 16px 14px 48px;
                border-radius: 12px;
                background: #f8f7f4;
                border: 1px solid #e8e6e1;
                color: #333;
                font-size: 15px;
                transition: all 0.3s;
            }

            .form-input:focus {
                outline: none;
                border-color: var(--primary);
                background: white;
                box-shadow: 0 0 0 4px rgba(74, 93, 74, 0.1);
            }

            .form-input::placeholder {
                color: #999;
            }

            .btn-primary {
                background: var(--dark);
                color: white;
                padding: 14px 28px;
                border-radius: 30px;
                font-weight: 500;
                transition: all 0.3s;
                width: 100%;
            }

            .btn-primary:hover {
                background: #333;
                transform: translateY(-2px);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            }

            .blob-shape {
                position: absolute;
                border-radius: 50%;
                filter: blur(80px);
                opacity: 0.4;
                z-index: 0;
            }

            .input-icon {
                position: absolute;
                left: 16px;
                top: 50%;
                transform: translateY(-50%);
                color: #999;
            }

            .divider {
                display: flex;
                align-items: center;
                gap: 16px;
                color: #999;
                font-size: 13px;
            }

            .divider::before,
            .divider::after {
                content: '';
                flex: 1;
                height: 1px;
                background: #e8e6e1;
            }

            .social-btn {
                flex: 1;
                padding: 12px;
                border-radius: 12px;
                border: 1px solid #e8e6e1;
                background: white;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 8px;
                font-size: 14px;
                font-weight: 500;
                color: #555;
                transition: all 0.3s;
            }

            .social-btn:hover {
                background: #f8f7f4;
                border-color: #ddd;
            }
        </style>
</head>

<body class="min-h-screen flex flex-col text-slate-800 relative overflow-hidden">

    <%- include('./partials/navbar') %>

        <!-- Decorative Blobs -->
        <div class="blob-shape w-96 h-96 bg-[#c9b99a]/50 -top-48 -left-48"></div>
        <div class="blob-shape w-80 h-80 bg-[#4a5d4a]/30 -bottom-40 -right-40"></div>
        <div class="blob-shape w-64 h-64 bg-[#e8dcc8]/60 top-1/2 right-1/4"></div>

        <div class="flex-grow flex items-center justify-center w-full px-4 py-16 relative z-10">

            <div class="w-full max-w-md">

                <!-- Login Card -->
                <div class="login-card p-8 md:p-10">

                    <!-- Header -->
                    <div class="text-center mb-8">
                        <div
                            class="w-14 h-14 rounded-2xl bg-[#4a5d4a] flex items-center justify-center text-white mx-auto mb-4">
                            <i class="ri-leaf-line text-2xl"></i>
                        </div>
                        <h2 class="text-2xl font-bold text-slate-800">Welcome back</h2>
                        <p class="text-slate-500 mt-2 text-sm">Enter your credentials to access your account</p>
                    </div>

                    <!-- Error Alert -->
                    <% if (typeof error !=='undefined' && error) { %>
                        <div
                            class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-xl mb-6 flex items-center gap-3 text-sm">
                            <i class="ri-error-warning-line text-lg"></i>
                            <span>
                                <%= error %>
                            </span>
                        </div>
                        <% } %>

                            <!-- Login Form -->
                            <form action="/login" method="post" class="space-y-5">

                                <!-- Email -->
                                <div>
                                    <label class="block text-sm font-medium text-slate-700 mb-2">Email</label>
                                    <div class="relative">
                                        <i class="ri-mail-line input-icon"></i>
                                        <input type="email" name="email" placeholder="you@example.com" required
                                            class="form-input">
                                    </div>
                                </div>

                                <!-- Password -->
                                <div>
                                    <div class="flex items-center justify-between mb-2">
                                        <label class="block text-sm font-medium text-slate-700">Password</label>
                                        <a href="#" class="text-sm text-[#4a5d4a] hover:underline font-medium">Forgot
                                            password?</a>
                                    </div>
                                    <div class="relative">
                                        <i class="ri-lock-line input-icon"></i>
                                        <input type="password" name="password" placeholder="••••••••" required
                                            class="form-input">
                                    </div>
                                </div>

                                <!-- Remember Me -->
                                <div class="flex items-center gap-2">
                                    <input type="checkbox" id="remember"
                                        class="w-4 h-4 rounded border-slate-300 text-[#4a5d4a] focus:ring-[#4a5d4a]">
                                    <label for="remember" class="text-sm text-slate-600">Remember me for 30 days</label>
                                </div>

                                <!-- Submit Button -->
                                <button type="submit" class="btn-primary flex items-center justify-center gap-2">
                                    <span>Sign In</span>
                                    <i class="ri-arrow-right-line"></i>
                                </button>

                            </form>

                            <!-- Register Link -->
                            <div class="mt-8 text-center text-sm text-slate-500">
                                Don't have an account?
                                <a href="/" class="text-[#4a5d4a] font-semibold hover:underline ml-1">Create account</a>
                            </div>

                </div>

                <!-- Trust Badges -->
                <div class="flex items-center justify-center gap-6 mt-8 text-slate-400 text-sm">
                    <div class="flex items-center gap-2">
                        <i class="ri-shield-check-line"></i>
                        <span>Secure login</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <i class="ri-lock-line"></i>
                        <span>256-bit encryption</span>
                    </div>
                </div>

            </div>

        </div>

</body>

</html>