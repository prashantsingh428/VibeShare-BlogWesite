<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
</head>

<body
    class="bg-gradient-to-br from-indigo-100 via-purple-100 to-pink-100 min-h-screen flex flex-col text-slate-800 selection:bg-indigo-500 selection:text-white">

    <%- include('./partials/navbar') %>

        <div class="flex-grow max-w-5xl mx-auto px-4 sm:px-6 py-10 w-full">

            <!-- ================= HEADER CARD ================= -->
            <div class="glass-card rounded-3xl shadow-xl overflow-hidden mb-10 group">

                <!-- Cover Photo (Gradient or Image) -->
                <div class="h-48 bg-gradient-to-r from-blue-400 via-indigo-500 to-purple-500 relative">
                    <div class="absolute inset-0 bg-black/10"></div>
                </div>

                <div class="px-8 pb-8 relative">

                    <div class="flex flex-col md:flex-row items-end -mt-12 mb-6 gap-6">

                        <!-- Profile Image with Hover Overlay -->
                        <div class="relative group z-10">
                            <div
                                class="w-32 h-32 rounded-full overflow-hidden border-4 border-white shadow-2xl bg-white">
                                <img src="/images/uploads/<%= user.profilepic || 'default.png' %>"
                                    class="w-full h-full object-cover transition duration-300 group-hover:scale-110"
                                    alt="Profile">
                            </div>
                            <a href="/profile/upload"
                                class="absolute inset-0 bg-black/40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition duration-300 rounded-full cursor-pointer">
                                <i class="ri-camera-line text-white text-3xl"></i>
                            </a>
                        </div>

                        <!-- User Info & Stats -->
                        <div class="flex-grow text-center md:text-left pt-2 md:pt-0">
                            <h1
                                class="text-3xl font-bold text-slate-900 flex items-center justify-center md:justify-start gap-2">
                                <%= user.name %>
                                    <% if(user.username==='prashant' ) { %> <i
                                            class="ri-verified-badge-fill text-blue-500 text-2xl" title="Verified"></i>
                                        <% } %>
                            </h1>
                            <p class="text-slate-500 font-medium mb-4">@<%= user.username %>
                            </p>

                            <div class="flex items-center justify-center md:justify-start gap-6 text-sm">
                                <span
                                    class="flex items-center gap-1 text-slate-700 hover:text-indigo-600 transition cursor-pointer">
                                    <span class="font-bold text-slate-900">
                                        <%= user.posts.length %>
                                    </span> Posts
                                </span>
                                <span
                                    class="flex items-center gap-1 text-slate-700 hover:text-indigo-600 transition cursor-pointer">
                                    <span class="font-bold text-slate-900">
                                        <%= user.followers ? user.followers.length : 0 %>
                                    </span> Followers
                                </span>
                                <span
                                    class="flex items-center gap-1 text-slate-700 hover:text-indigo-600 transition cursor-pointer">
                                    <span class="font-bold text-slate-900">
                                        <%= user.following ? user.following.length : 0 %>
                                    </span> Following
                                </span>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="flex items-center gap-3 mb-1">
                            <a href="/profile/upload"
                                class="px-5 py-2.5 rounded-full border border-slate-300 text-slate-700 font-semibold hover:bg-slate-50 hover:border-slate-400 transition shadow-sm flex items-center gap-2">
                                <i class="ri-image-edit-line"></i>
                                <span>Edit Photo</span>
                            </a>
                            <a href="/logout"
                                class="px-5 py-2.5 rounded-full bg-slate-900 text-white font-semibold hover:bg-slate-800 transition shadow-md flex items-center gap-2">
                                <i class="ri-logout-box-r-line"></i>
                                <span>Logout</span>
                            </a>
                        </div>

                    </div>

                </div>
            </div>


            <!-- ================= CREATE POST & FEED GRID ================= -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">

                <!-- LEFT COLUMN: Create Post -->
                <div class="lg:col-span-1">
                    <div class="glass-card rounded-3xl shadow-lg p-6 sticky top-24">
                        <h3 class="text-lg font-bold text-slate-800 mb-4 flex items-center gap-2">
                            <i class="ri-quill-pen-line text-indigo-500"></i> New Post
                        </h3>

                        <form method="post" action="/post" enctype="multipart/form-data" class="space-y-4">
                            <div class="relative">
                                <textarea name="content" placeholder="What's on your mind?" rows="4"
                                    class="w-full p-4 rounded-xl bg-indigo-50/50 border-0 focus:ring-2 focus:ring-indigo-400 placeholder-slate-400 text-slate-700 resize-none transition-all"></textarea>
                            </div>

                            <!-- Image Upload Preview trigger (custom file input) -->
                            <div class="flex items-center gap-4">
                                <label
                                    class="cursor-pointer flex items-center gap-2 text-slate-500 hover:text-indigo-600 transition px-3 py-2 rounded-lg hover:bg-indigo-50 border border-transparent hover:border-indigo-100">
                                    <i class="ri-image-add-line text-xl"></i>
                                    <span class="text-sm font-medium" id="upload-text">Add Photos</span>
                                    <input type="file" name="images" class="hidden" id="image-upload" multiple
                                        onchange="const count = this.files.length; document.getElementById('upload-text').innerText = count > 0 ? count + ' Service/Photos' : 'Add Photos'">
                                </label>
                            </div>

                            <button type="submit"
                                class="w-full py-3 rounded-xl bg-gradient-to-r from-indigo-500 to-purple-500 text-white font-semibold shadow-md hover:shadow-lg hover:from-indigo-600 hover:to-purple-600 transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center gap-2">
                                <span>Post It</span>
                                <i class="ri-send-plane-fill"></i>
                            </button>
                        </form>
                    </div>
                </div>

                <!-- RIGHT COLUMN: Posts Feed -->
                <div class="lg:col-span-2 space-y-6">

                    <h3 class="text-xl font-bold text-slate-800 px-2 flex items-center justify-between">
                        <span>Your Timeline</span>
                        <span
                            class="text-xs font-normal text-slate-400 bg-white px-2 py-1 rounded-full border border-slate-100">Latest
                            First</span>
                    </h3>

                    <% if (!user.posts || user.posts.length===0) { %>
                        <div class="text-center py-16 bg-white/40 rounded-3xl border border-dashed border-slate-300">
                            <div
                                class="bg-indigo-50 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 text-indigo-300">
                                <i class="ri-article-line text-3xl"></i>
                            </div>
                            <p class="text-slate-500 font-medium">No posts yet.</p>
                            <p class="text-slate-400 text-sm mt-1">Share your first thought!</p>
                        </div>
                        <% } else { %>

                            <% user.posts.slice().reverse().forEach(function(post) { %>
                                <!-- Post Card -->
                                <div
                                    class="group bg-white rounded-2xl shadow-sm border border-slate-100 p-6 hover:shadow-md transition-all duration-300">

                                    <div class="flex items-start justify-between mb-4">
                                        <div class="flex items-center gap-3">
                                            <div
                                                class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-bold text-sm">
                                                <%= user.name.charAt(0).toUpperCase() %>
                                            </div>
                                            <div>
                                                <h4 class="font-semibold text-slate-800 text-sm leading-tight">
                                                    <%= user.name %>
                                                </h4>
                                                <p class="text-xs text-slate-400">
                                                    <% const options={ year: 'numeric' , month: 'short' , day: 'numeric'
                                                        }; const postDate=new
                                                        Date(post.date).toLocaleDateString('en-US', options); %>
                                                        <%= postDate %>
                                                </p>
                                            </div>
                                        </div>

                                        <!-- Options Dropdown (Simple for now) -->
                                        <div class="relative">
                                            <% if (user.username===user.username) { /* Just keeping consistency */ } %>
                                        </div>
                                    </div>

                                    <p class="text-slate-700 text-base leading-relaxed mb-4 whitespace-pre-wrap">
                                        <%= post.content %>
                                    </p>

                                    <% if (post.images && post.images.length> 0) { %>

                                        <!-- Collage Container -->
                                        <div class="mb-4 rounded-xl overflow-hidden shadow-sm border border-slate-100 bg-slate-50 h-96 grid gap-0.5 
                                            <% if (post.images.length === 1) { %> grid-cols-1 <% } %>
                                            <% if (post.images.length === 2) { %> grid-cols-2 <% } %>
                                            <% if (post.images.length === 3) { %> grid-cols-2 grid-rows-2 <% } %>
                                            <% if (post.images.length >= 4) { %> grid-cols-2 grid-rows-2 <% } %>
                                        ">

                                            <% post.images.slice(0, 4).forEach(function(img, index) { %>
                                                <div class="relative w-full h-full overflow-hidden 
                                                    <% if (post.images.length === 3 && index === 0) { %> row-span-2 <% } %>
                                                    group
                                                ">
                                                    <img src="/images/uploads/<%= img %>"
                                                        class="w-full h-full object-cover group-hover:scale-110 transition duration-700"
                                                        loading="lazy">

                                                    <!-- Overlay for +X more images if > 4 -->
                                                    <% if (post.images.length> 4 && index === 3) { %>
                                                        <div
                                                            class="absolute inset-0 bg-black/50 flex items-center justify-center text-white font-bold text-2xl backdrop-blur-[2px]">
                                                            +<%= post.images.length - 4 %>
                                                        </div>
                                                        <% } %>
                                                </div>
                                                <% }) %>

                                        </div>

                                        <% } else if (post.image) { %>
                                            <!-- Fallback for old posts -->
                                            <div
                                                class="w-full h-96 mb-4 rounded-xl overflow-hidden shadow-sm border border-slate-100 relative bg-slate-50">
                                                <img src="/images/uploads/<%= post.image %>"
                                                    class="w-full h-full object-cover hover:scale-105 transition duration-500"
                                                    loading="lazy">
                                            </div>
                                            <% } %>

                                                <div
                                                    class="flex items-center justify-between pt-4 border-t border-slate-50">

                                                    <!-- Like Button -->
                                                    <div class="flex items-center gap-1">
                                                        <a href="/like/<%= post._id %>"
                                                            class="flex items-center gap-2 px-3 py-1.5 rounded-lg transition-colors duration-200 <%= post.likes.some(id => id.toString() === user._id.toString()) ? 'bg-red-50 text-red-500' : 'text-slate-400 hover:bg-slate-50 hover:text-slate-600' %>">
                                                            <i
                                                                class="<%= post.likes.some(id => id.toString() === user._id.toString()) ? 'ri-heart-3-fill' : 'ri-heart-3-line' %> text-lg"></i>
                                                            <span class="font-medium text-sm">
                                                                <%= post.likes.length %>
                                                            </span>
                                                        </a>
                                                    </div>

                                                    <!-- Actions -->
                                                    <div class="flex items-center gap-2">
                                                        <a href="/edit/<%= post._id %>"
                                                            class="w-8 h-8 flex items-center justify-center rounded-full text-slate-400 hover:bg-blue-50 hover:text-blue-600 transition"
                                                            title="Edit">
                                                            <i class="ri-pencil-line"></i>
                                                        </a>
                                                        <a href="/delete/<%= post._id %>"
                                                            onclick="return confirm('Delete this post?')"
                                                            class="w-8 h-8 flex items-center justify-center rounded-full text-slate-400 hover:bg-red-50 hover:text-red-500 transition"
                                                            title="Delete">
                                                            <i class="ri-delete-bin-line"></i>
                                                        </a>
                                                    </div>
                                                </div>

                                </div>
                                <% }) %>

                                    <% } %>
                </div>
            </div>

        </div>

        <%- include('./partials/footer') %>

</body>

</html>