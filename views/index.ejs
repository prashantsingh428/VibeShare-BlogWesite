        <style>
            :root {
                --primary: #4a5d4a;
                --primary-light: #6b7f6b;
                --accent: #c9b99a;
                --accent-light: #e8dcc8;
                --dark: #1e1e1e;
                --light: #f5f3ef;
                --cream: #faf8f5;
            }

            body {
                background-color: var(--cream);
                overflow-x: hidden;
            }

            .hero-gradient {
                background: linear-gradient(135deg, var(--accent-light) 0%, var(--cream) 50%, #e8e4dc 100%);
            }

            .btn-primary {
                background: var(--dark);
                color: white;
                padding: 14px 28px;
                border-radius: 30px;
                font-weight: 500;
                transition: all 0.3s;
            }

            .btn-primary:hover {
                background: #333;
                transform: translateY(-2px);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            }

            .btn-outline {
                background: transparent;
                border: 1px solid var(--dark);
                color: var(--dark);
                padding: 14px 28px;
                border-radius: 30px;
                font-weight: 500;
                transition: all 0.3s;
            }

            .btn-outline:hover {
                background: var(--dark);
                color: white;
            }

            .feature-card {
                background: white;
                border-radius: 16px;
                padding: 32px;
                transition: all 0.3s;
                border: 1px solid #eee;
            }

            .feature-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
            }

            .dark-section {
                background: #3d3d3d;
                border-radius: 24px;
            }

            .community-avatar {
                width: 80px;
                height: 80px;
                border-radius: 16px;
                object-fit: cover;
                transition: all 0.3s;
            }

            .community-avatar:hover {
                transform: scale(1.1);
            }

            .testimonial-card {
                background: white;
                border-radius: 16px;
                padding: 24px;
                border: 1px solid #eee;
            }

            .nav-tabs {
                display: flex;
                gap: 8px;
                background: #f0ede8;
                padding: 6px;
                border-radius: 30px;
            }

            .nav-tab {
                padding: 10px 20px;
                border-radius: 25px;
                font-size: 14px;
                font-weight: 500;
                color: #666;
                transition: all 0.3s;
                cursor: pointer;
            }

            .nav-tab:hover,
            .nav-tab.active {
                background: white;
                color: var(--dark);
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            }

            .blob-shape {
                position: absolute;
                border-radius: 50%;
                filter: blur(60px);
                opacity: 0.5;
                z-index: 0;
            }

            .floating {
                animation: float 6s ease-in-out infinite;
            }

            @keyframes float {

                0%,
                100% {
                    transform: translateY(0);
                }

                50% {
                    transform: translateY(-20px);
                }
            }

            .slide-up {
                animation: slideUp 0.8s ease-out forwards;
                opacity: 0;
            }

            @keyframes slideUp {
                from {
                    opacity: 0;
                    transform: translateY(30px);
                }

                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            .delay-1 {
                animation-delay: 0.2s;
            }

            .delay-2 {
                animation-delay: 0.4s;
            }

            .delay-3 {
                animation-delay: 0.6s;
            }
        </style>
</head>

